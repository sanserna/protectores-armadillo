// Tus estilos van aqui
#video-container
    background-color black
    min-height 100vh
    overflow hidden
    position relative
    max-height 100vh
    width 100%

#home-video
    display block
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    object-fit cover
    z-index 0

#logo-bg
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    background rgba(black,.3) url(../img/pattern.png)
    z-index 0

#lr-logo
    area()
    position relative
    width 20%
    //left 50%
    //margin-left -35%
    //top 75px
    z-index 1

