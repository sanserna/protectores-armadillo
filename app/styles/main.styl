// Tus estilos van aqui
.page-content {
    height 5000px
    background-color white
}



// -------------------
// #ABOUT-SECTION
// -------------------

.about {
    background white
    .about__title {
        color $medium-black
        margin-bottom 5px
    }
    .about__subtitle {
        color $sun-flower
    }
    .about__description {
        color $medium-black
        margin-top 20px
        text-align center
        @media screen and (min-width: 40em) {
            margin-top 30px
        }
    }
}



// -------------------
// #GALERIA-SECTION
// -------------------

.galeria {
    background-color lighten($silver, 70%)
    max-width 75rem
    margin-left auto
    margin-right auto
    padding 0 0 10px 0
    #owl-gallery {
        .item {
            position relative
            img {
                display block
                height auto
                object-fit cover
            }
            @media screen and (min-width: 40em) {
                height 60vh
                img {
                    position absolute
                    top 50%
                    left 50%
                    width 100%
                    transform translate(-50%, -50%)
                }
            }
        }
    }
}
















